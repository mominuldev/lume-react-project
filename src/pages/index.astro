---
import Hero from '@/components/Home/Hero';
import Layout from '../layouts/Layout.astro';
import Heading from '@/components/Heading';
import StorageCard from '@/components/Home/StorageCard';
import ContentCard from '@/components/Home/ContentCard';
import Button from '@/components/Button';

import Image from '../assets/progress-image.png';
import BrandLogos from '@/components/BrandLogos';
import PricingItem from '@/components/Home/PricingItem';

import PricingContents from '@/data/pricing';

console.log(PricingContents);

---

<Layout title="Home">
	<Hero />

	<section class="py-[80px] md:py-[158px] bg-[#051413]">
		<div class="container">
			<Heading 
				title="Sign up, upload, and" 
				highligtText="share" 
				description="Lume handles the privacy."
			/>

			<StorageCard />

			<div class="grid grid-cols-1 md:grid-cols-3 gap-10 md:gap-8 mt-[65px] md:mt-[155px]">
				<ContentCard 
					title="Create an account" 
					description="Lume handles the privacy so that you can focus on you." 
				/>

				<ContentCard 
					title="Upload" 
					description="Lume handles the privacy so that you can focus on you." 
				/>

				<ContentCard 
					title="Secure" 
					description="Lume handles the privacy so that you can focus on you." 
				/>
			</div>


		</div>
	</section>

	<section class="py-[65px] md:py-[158px]">
		<div class="container">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-11 md:gap-10 items-center">
				<div>
					<Heading 
						align='text-left'
						title="Delete what you  don’t need (forever)" 
						description="Experience privacy-first solutions that are more affordable than most on the market, putting you in control."
					/>

					<Button 
						style="outline"
						label="Read more about data delection →" 
						url="#" 
					/>

				</div>

				<div>
					<img src={Image.src} alt="Delete" />
				</div>

			</div>
		</div>
	</section>

	<section class="bg-[#051413] py-[40px] md:py-[90px]">
		<div class="container">
			<div class="md:flex items-start md:items-center justify-between gap-[150px]">
				<div class="basis-80 md:basis-[17rem] mb-[30px] md:mb-0">
					<h2 class="text-[#F8F8F8] text-[31px] font-medium">
						Powered 
						& Trusted by
					</h2>
				</div>

				<div class="flex-grow">
					<BrandLogos />
				</div>
			</div>
		</div>
	</section>

	<section class="py-[65px] md:py-[158px]">
		<div class="container">
			<Heading 
				title="Pay as you go, upgrade" 
				highligtText="whenever" 
				description="To understand how Lume works, it helps to understand."
				
			/>

			<div class="grid grid-cols-1 md:grid-cols-3 gap-[60px] md:gap-8 mt-[65px] md:mt-[170px]">

				{PricingContents.map((item, index) => (
				
					
					<PricingItem 
						key={index}
						items={item}
					/>
				))}
			</div>

		</div>
	</section>

	<section class="py-[65px] md:py-[115px] bg-[#051413]">
		<div class="container">
			<h2 class="text-[#F8F8F8] text-[25px] md:text-[35px] font-medium text-center">
				Want to be a part of the next big thing?
			</h2>

			<div class="mt-7 md:mt-[50px] flex gap-3 justify-center">
				<Button 
					label="Learn more about Lume →" 
					url="#" 
				/>

				<Button 
					style="outline"
					label="Referrals" 
					url="#"
				/>
			</div>
		</div>
	</section>

	<section class="py-[65px] md:py-[158px]">
		<div class="container">
			<div class="flex justify-between items-center">
				<Heading 
					align='text-left'
					title="Docs, Updates, & Guides"
					description="To understand how Lume keeps you safe, it helps to understand."
			/>

			<Button 
				label="Read our docs →" 
				url="#" 
				style="outline"
				/>
			</div>
		</div>

</Layout>
